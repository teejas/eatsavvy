# Stage 1: Builder
FROM --platform=$BUILDPLATFORM golang:1.24-alpine AS builder

# These are automatically set by docker buildx
ARG TARGETOS
ARG TARGETARCH

WORKDIR /app

# Copy go.mod and go.sum first for better layer caching
COPY backend/go.mod backend/go.sum ./
RUN go mod download

# Copy the rest of the backend source code
COPY backend/ ./

# Build the Worker binary for the target platform
RUN CGO_ENABLED=0 GOOS=${TARGETOS} GOARCH=${TARGETARCH} go build -o bin/worker cmd/worker/main.go

# Stage 2: Runtime
FROM alpine:latest

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/bin/worker ./worker

# Copy the .env file
COPY backend/.env ./.env
ENV RABBITMQ_HOST=eatsavvy-rabbitmq

# Run the Worker
ENTRYPOINT ["./worker"]

