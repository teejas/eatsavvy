---
# =============================================================================
# SECRETS - Copy to 01-secrets.yaml and fill in your values
# =============================================================================
# cp 01-secrets.yaml.example 01-secrets.yaml
# Then edit 01-secrets.yaml with your actual credentials
# =============================================================================

# OCIR Image Pull Secret
apiVersion: v1
kind: Secret
metadata:
  name: ocir-secret
  namespace: eatsavvy
type: kubernetes.io/dockerconfigjson
stringData:
  .dockerconfigjson: |
    {
      "auths": {
        "sjc.ocir.io": {
          "username": "YOUR_NAMESPACE/YOUR_USER@email.com",
          "password": "YOUR_OCIR_AUTH_TOKEN",
          "email": "YOUR_EMAIL@example.com"
        }
      }
    }

---
# RabbitMQ Credentials
apiVersion: v1
kind: Secret
metadata:
  name: rabbitmq-credentials
  namespace: eatsavvy
type: Opaque
stringData:
  RABBITMQ_DEFAULT_USER: ""
  RABBITMQ_DEFAULT_PASS: ""
  rabbitmq-password: ""
  rabbitmq-erlang-cookie: ""

---
# Cloudflare Tunnel Token
apiVersion: v1
kind: Secret
metadata:
  name: cloudflared-credentials
  namespace: eatsavvy
type: Opaque
stringData:
  tunnel-token: "YOUR_CLOUDFLARE_TUNNEL_TOKEN"

